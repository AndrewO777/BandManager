<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BandManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BandManager"
    Title="BandManager">
    <Shell.FlyoutHeader>
        <Grid HeightRequest="200" BackgroundColor="{StaticResource Primary}">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Band Manager" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource White}"
                       HorizontalOptions="Center"/>
                <Label Text="Organize your band" 
                       FontSize="14"
                       TextColor="{StaticResource Gray200}"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Band" Icon="band.png">
        <ShellContent ContentTemplate="{DataTemplate local:Band}" Route="BandPage" />
    </FlyoutItem>

    <FlyoutItem Title="Practice" Icon="practice.png">
        <ShellContent ContentTemplate="{DataTemplate local:Practice}" Route="PracticePage" />
    </FlyoutItem>

    <FlyoutItem Title="Setlists" Icon="setlist.png">
        <ShellContent ContentTemplate="{DataTemplate local:Setlists}" Route="SetlistsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Songs" Icon="songs.png">
        <ShellContent ContentTemplate="{DataTemplate local:Songs}" Route="SongsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate local:Settings}" Route="SettingsPage" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Grid HeightRequest="100" BackgroundColor="{StaticResource Primary}" Padding="20">
            <Label Text="Â© 2024 Band Manager" 
                   FontSize="12"
                   TextColor="{StaticResource Gray200}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Grid>
    </Shell.FlyoutFooter>
</Shell>
